<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestEditText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#808080</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TestEditText.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TestEditText.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TestEditText.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyStyleEditText" parent="@android:style/Widget.EditText">
        <item name="android:ems">10</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:text"></item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyStyleTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@color/clickText</item>
    </style>

    <style name="MyStyleTextViewMenu" parent="@android:style/Widget.TextView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/clickText</item>

        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MyStyleRadio" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/clickText</item>
        <item name="colorControlActivated">@color/clickText</item>
    </style>



</resources>