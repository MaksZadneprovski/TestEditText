<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.report_list.report.shield_list.shield.shield_group.GroupListActivity">

    <HorizontalScrollView
        android:id="@+id/HorizScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/TitleGroupRVItem"
                    android:layout_width="120dp"
                    android:text="Обозначение" />

                <View style="@style/verticalLine" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/TitleGroupRVItem"
                    android:layout_width="140dp"
                    android:text="Адрес" />

                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="80dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Фаза" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="120dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Кабель" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="80dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Кол-во жил" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="120dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Сечение" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="140dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Аппарат защиты" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="120dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Марка автомата" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="80dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Iном" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="120dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Тип расцепителя" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="120dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Диапазон Ф-0" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="80dp"
                    style="@style/TitleGroupRVItem"
                    android:text="t сраб. автомата" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="120dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Марка УЗО" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="120dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Iном УЗО" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="120dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Ном. диф. ток" />
                <View style="@style/verticalLine" />
                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="120dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Тип диф. тока" />
                <View style="@style/verticalLine" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="90dp"
                    style="@style/TitleGroupRVItem"
                    android:text="Добавить" />
                <View style="@style/verticalLine" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="90dp"
                    style="@style/TitleGroupRVItem"
                    android:layout_marginRight="10dp"
                    android:text="Удалить" />

            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:id="@+id/linLayGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/clickText"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"
        app:layout_constraintTop_toBottomOf="@+id/HorizScroll"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>