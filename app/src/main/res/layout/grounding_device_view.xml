<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupViewLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/et1"
        style="@style/ETForGroupRVItem"
        android:inputType="textCapSentences"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="110dp"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/buttonRv1"
        style="@style/TVForGroupRVItem" />

    <EditText
        android:id="@+id/et2"
        style="@style/ETForGroupRVItem"
        android:inputType="numberDecimal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="90dp"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/buttonRv2"
        style="@style/TVForGroupRVItem" />

    <EditText
        android:id="@+id/et3"
        style="@style/ETForGroupRVItem"
        android:inputType="numberDecimal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="70dp"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/buttonRv3"
        style="@style/TVForGroupRVItem" />

    <EditText
        android:id="@+id/et4"
        style="@style/ETForGroupRVItem"
        android:inputType="numberDecimal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="60dp"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/buttonRv4"
        style="@style/TVForGroupRVItem" />


    <EditText
        android:id="@+id/et5"
        style="@style/ETForGroupRVItem"
        android:inputType="numberDecimal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="60dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/buttonRv5"
        style="@style/TVForGroupRVItem" />


    <TextView
        android:layout_marginLeft="30dp"
        android:text="  -  "
        android:layout_width="50dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        style="@style/TVForDelGroupRVItem" />


</LinearLayout>